		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vercel": "^41.2.2",
		"vite": "^6.0.0",
		"vitest": "^3.0.0"
	},
	"dependencies": {
		"@supabase/auth-helpers-sveltekit": "^0.13.0",
		"@supabase/supabase-js": "^2.49.1",
		"date-fns": "^4.1.0",
		"date-fns-tz": "^3.2.0",
		"libphonenumber-js": "^1.12.5",
		"luxon": "^3.5.0"
	}
}
